<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ToDoList" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryDark">@color/white</item>
        <item name="colorAccent">@color/black</item>
        <item name="titleTextColor">@color/black</item>
        <item name="fontFamily">@font/nimbus_mono_regular</item>
        <item name="android:windowLightStatusBar">true</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.ToDoList.Dialog" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowIsFloating">true</item>
        <item name="android:fontFamily">@font/nimbus_mono_regular</item>
        <item name="android:minWidth">250dp</item>
        <item name="android:windowBackground">@drawable/custom_background</item>
    </style>

    <style name="TextAppearance.AppCompat.Widget.ActionBar.Title" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/black</item>
        <item name="fontFamily">@font/nimbus_mono_bold</item>
    </style>
</resources>
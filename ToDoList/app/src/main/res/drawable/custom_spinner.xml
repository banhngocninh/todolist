<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <padding
                android:bottom="4dp"
                android:left="4dp"
                android:right="4dp"
                android:top="4dp" />
            <solid android:color="#fffacd" />
            <corners android:radius="6dp" />
            <stroke
                android:width="2dp"
                android:color="@color/black" />
        </shape>
    </item>

    <item
        android:bottom="2dp"
        android:left="2dp"
        android:right="2dp"
        android:top="2dp">
        <bitmap
            android:gravity="right"
            android:src="@drawable/down_24" />
    </item>
</layer-list>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp">

    <ImageView
        android:layout_centerVertical="true"
        android:id="@+id/imgIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@drawable/background_icon_and_button"
        android:src="@drawable/homework_64" />

    <TextView
        android:id="@+id/tvTaskName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@id/imgIcon"
        android:text="Task Name"
        android:textColor="#f08080"
        android:textSize="20dp"
        android:textStyle="bold" />

    <RatingBar
        android:id="@+id/ratingTask"
        android:layout_width="wrap_content"
        android:layout_height="32dp"
        android:layout_below="@+id/tvTaskTime"
        android:layout_marginLeft="-25dp"
        android:layout_toRightOf="@id/imgIcon"
        android:isIndicator="true"
        android:numStars="5"
        android:progressDrawable="@drawable/custom_rating_bar"
        android:scaleX="0.6"
        android:scaleY="0.6" />

    <TextView
        android:id="@+id/tvTaskCategory"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvTaskTime"
        android:layout_alignParentRight="true"
        android:layout_margin="10dp"
        android:text="Category"
        android:textColor="#ff4500"
        android:textStyle="italic" />

    <TextView
        android:layout_margin="10dp"
        android:layout_marginLeft="10dp"
        android:id="@+id/tvTaskTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvTaskName"
        android:layout_alignParentRight="true"
        android:text="Time"
        android:textColor="#db7093"
        android:textStyle="normal" />

</RelativeLayout>